{
  "expo": {
    "name": "Perfect Ledger",
    "slug": "perfect-ledger",
    "version": "2.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.perfectledger.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#0066cc"
      },
      "package": "com.perfectledger.app",
      "versionCode": 6,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "usesCleartextTraffic": true
    },
    "web": {
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "./plugins/withAndroidNetworkSecurityConfig"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "b319fd1f-3800-4e31-a513-acdb548e08a1"
      }
    }
  }
}
